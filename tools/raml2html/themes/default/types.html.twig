{% set types = method_types(api.types, method) %}
{% if types is defined and types|length > 0 %}
    <div class="py-3">
        <h6 class="heading text-gray border-bottom pb-2">Types</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Type</th>
                    <th scope="col">Description</th>
                </tr>
                </thead>
                <tbody>
                {% for typeName, typeDescription in types %}
                    <tr>
                        <td>
                            <a href="#" class="text-ocean-blue" data-toggle="modal" data-target="#{{ typeName }}">
                                {{ typeName }}
                            </a>
                        </td>
                        <td>{{ typeDescription }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endif %}

