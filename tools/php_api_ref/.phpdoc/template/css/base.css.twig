{# --------------------------------------------------------------------------- #}
{# --------------------------------- Sidebar --------------------------------- #}
{# --------------------------------------------------------------------------- #}

.md-sidebar--primary {
    padding-left: 0;
}

.md-nav--primary .md-nav:not([data-md-level="0"]) {
    padding-left: 16px;
}

.md-nav--primary .md-nav__list-title {
    display: inline-block;
    color: #71767C;
    font-size: 12px;
    line-height: 18px;
    font-weight: 600;
    padding: 16px 0 4px;
}

.md-nav--primary .md-nav__list .md-nav__link {
    padding-top: 12px;
    padding-bottom: 12px;
    line-height: 24px;
    padding-left: 0;
    background-size: 16px 16px;
}

.md-nav--primary .md-nav__item--nested > .level-0 {
    font-size: 14px;
    line-height: 21px;
    font-weight: 600;
    padding-left: 12px;
}

.md-nav--primary .md-nav__item--nested > .level-1 {
    padding-left: 40px;
    background-position: 16px 16px;
}

.md-nav--primary .md-nav__item--nested > .md-nav__link:not(.level-0):not(.level-1) {
    padding-left: 32px;
    background-position: 8px 16px;
}

.md-nav--primary .md-nav__item:not(.md-nav__item--nested) > .md-nav__link:not(.level-0):not(.level-1) {
    padding-left: 8px;
}

.md-nav--primary .md-nav__item > .md-nav__link a {
    padding: 0;
}

.md-nav--primary .md-nav__item > .md-nav__link:not(.level-0) {
    justify-content: flex-start;
}

.md-nav--primary .md-nav__item > .md-nav__link:not(.level-0):not(.level-1) img {
    margin-right: 8px;
}

.md-nav--primary .md-nav__item--nested > .md-nav__toggle:checked ~ .md-nav__link:not(.level-0) {
    background-color: #F3F3F6;
}


{# --------------------------------------------------------------------------- #}
{# ------------------------------- Breadcrumbs ------------------------------- #}
{# --------------------------------------------------------------------------- #}

ul.breadcrumbs li.breadcrumb-item a {
    color: var(--dark-grey);
}

ul.breadcrumbs li.breadcrumb-item-current a {
    color: var(--ibexa-dusk-black);
}


{# --------------------------------------------------------------------------- #}
{# ---------------------------- Content: Headers ----------------------------- #}
{# --------------------------------------------------------------------------- #}

.md-typeset h1,
.md-typeset h2,
.md-typeset h3,
.md-typeset h4 {
    font-family: "Work Sans";
}

.md-typeset h1 {
    font-size: 28px;
    line-height: 34px;
    margin-bottom: 0;
}

.md-typeset .content-header {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: flex-end;
}

.md-typeset .content-header__found-in {
    font-size: 12px;
    line-height: 18px;
    color: #71767C;
}

.md-typeset .content-header__found-in img {
    display: inline-block;
}

.md-typeset .content-header__subheader {
    margin-top: 8px;
    width: 100%;
}

.md-typeset h2 {
    font-size: 22px;
    line-height: 27px;
    margin: 24px 0 0;
}

.md-typeset h3 {
    font-size: 18px;
    line-height: 22px;
    margin: 24px 0 0;
}

.md-typeset h4 {
    font-size: 16px;
    line-height: 19px;
    margin: 24px 0 0;
}


{# --------------------------------------------------------------------------- #}
{# ----------------------------- Highlighttable ------------------------------ #}
{# --------------------------------------------------------------------------- #}

.md-typeset .highlighttable,
.md-typeset .highlight pre,
.md-typeset .highlight pre code {
    border-radius: 4px;
}

.md-typeset .highlighttable .linenos {
    min-width: 26px;
}

.md-typeset .highlight pre code {
    padding: 16px;
}


{# --------------------------------------------------------------------------- #}
{# -------------------------------- Arguments -------------------------------- #}
{# --------------------------------------------------------------------------- #}

.md-typeset .phpdocumentor-argument-list dd {
    margin: 0;
}
.md-typeset .phpdocumentor-argument-list dd + dt {
    margin-top: 8px;
}