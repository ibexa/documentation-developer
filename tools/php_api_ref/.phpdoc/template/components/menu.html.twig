{% if depth == 0 %}
    {% if entry.children.count > 0 %}
        {% for child in entry.children %}
            {% include 'components/menu-entry.html.twig' with {
                title: entry.title|shortFQSEN ~ ' ' ~ child.title|shortFQSEN,
                nav_id: depth ~ '-' ~ loop.index,
                expanded: true,
                entry: child,
            } %}
        {% endfor %}
    {% endif %}
{% else %}
    {% if entry.children.count > 0 %}
        {% if depth > 1 %}
            <label class="md-nav__list-title">
                Namespaces
            </label>
        {% endif %}
        <ul class="md-nav__list">
            {% for child in entry.children %}
                {% include 'components/menu-entry.html.twig' with {
                    title: child.title|shortFQSEN,
                    nav_id: depth ~ '-' ~ loop.index,
                    entry: child,
                    icon: 'folder.svg',
                } %}
            {% endfor %}
        </ul>
    {% endif %}

    {% set other_elements = entry.interfaces.merge(entry.classes).merge(entry.traits) %}

    {% if other_elements.count > 0 %}
        {% if depth > 1 %}
            <label class="md-nav__list-title">
                Interfaces, classes and traits
            </label>
        {% endif %}
        <ul class="md-nav__list">
        {% for element in other_elements|sort_asc %}
            {% include 'components/menu-entry.html.twig' with {
                title: element.title|shortFQSEN,
                nav_id: depth ~ '-' ~ loop.index,
                entry: element,
                icon: 'file.svg',
            } %}
        {% endfor %}
    {% endif %}
{% endif %}
