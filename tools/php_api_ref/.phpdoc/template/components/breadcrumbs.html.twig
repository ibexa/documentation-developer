{% set breadcrumbs = usesNamespaces ? breadcrumbs(node) : packages(node) %}

<ul class="breadcrumbs">
    {% for breadcrumb in breadcrumbs %}
        <li class="breadcrumb-item {{ loop.last ? 'breadcrumb-item-current'}}">
            <a href="{{ link(breadcrumb) }}">
                {{ breadcrumb.name }} {{ not loop.last ? '>'}}
            </a>
        </li>
    {% endfor %}
</ul>
